{
  "manifest_version": 2,
  "name": "Stellar Tip",
  "description": "",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "css" : ["stellar-tip-dialog.css", "stellar-tip-youtube.css"],
      "js": ["jquery-3.4.1.js", "common.js", "youtube.js"]
    },
    {
      "matches": ["https://*.github.com/*/pull/*", "https://*.github.com/*/issues/*"],
      "css" : ["stellar-tip-dialog.css", "stellar-tip-github.css"],
      "js": ["jquery-3.4.1.js", "common.js", "github.js"]
    },
    {
      "matches": ["https://*.twitch.tv/*"],
      "js": ["jquery-3.4.1.js", "common.js", "twitch.js"]
    }
  ],
  "page_action": {
    "default_title": "Stellar Tip",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "tabs",
    "<all_urls>",
    "http://127.0.0.1/*",
    "webNavigation",
    "storage"
  ]
}
