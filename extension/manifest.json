{
  "manifest_version": 2,
  "name": "Stellar Tip",
  "description": "",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    { "matches": ["http://*/*", "https://*/*"], "js": ["jquery-3.4.1.js", "scraper.js"] }
  ],
  "page_action": {
    "default_icon": "icon-64.png",
    "default_title": "Stellar Tip",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "tabs",
    "<all_urls>",
    "http://127.0.0.1/*"
  ]
}